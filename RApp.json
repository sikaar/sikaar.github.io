"showValue": "h"
},
{
"name": "OptInFilter",
"displayName": "Opt-In Filter",
"defaultValue": "${CALL_PERMISSION_STATUS?skip}",
"showValue": "rw"
},
{
"name": "PrimaryPhone",
"displayName": "Primary Phone Number",
"defaultValue": "${MOBILE_NUMBER_?skip}",
"showValue": "rw"
},
{
"name": "CampaignID",
"displayName": "Add to this Call Campaign",
"defaultValue": "",
"showValue": "rw"
}
]
"inboundParameters" : [
{
"name": "ValidPhone",
"displayName": "Valid Phone",
"type": "TEXT"
},
{
"name": "TimeOfCall",
"displayName": "Time of Call",
"type": "DATETIME"
},
{
"name": "ResponseValue",
"displayName": "Response Value",
"type": "NUMBER"
}
]
},
{
"name": "Add to Campaign only",
"outboundParameters" : [
{
"name": "CustomerID",
"displayName": "Customer ID",
"defaultValue": "${CUSTOMER_ID_?skip}",
"showValue": "h"
},
{
"name": "OptInFilter",
"displayName": "Opt-In Filter",
"defaultValue": "${CALL_PERMISSION_STATUS?skip}",
"showValue": "rw"
},
{
"name": "PrimaryPhone",
