"showValue": "rw"
},
{
"name": "CampaignID",
"displayName": "Add to this Call Campaign",
"defaultValue": "",
"showValue": "rw"
}
],
},
{
"name": "Get Info only",
"outboundParameters" : [
{
"name": "CustomerID",
"displayName": "Customer ID",
"defaultValue": "${CUSTOMER_ID_?skip}",
"showValue": "h"
}
],
"inboundParameters" : [
{
"name": "ValidPhone",
"displayName": "Valid Phone",
"type": "TEXT"
},
{
"name": "TimeOfCall",
"displayName": "Time of Call",
"type": "DATETIME"
},
{
"name": "ResponseValue",
"displayName": "Response Value",
"type": "NUMBER"
}
]
}
]
